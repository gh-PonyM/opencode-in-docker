{
  "$schema": "https://opencode.ai/config.json",
  "tui": {
    "scroll_speed": 1
  },
  "permission": {
    "*": "ask",
    "bash": {
      "*": "ask",
      "git reset": "deny",
      "git *": "allow",
      "npm *": "allow",
      "rm *": "deny",
      "find * --exec": "ask"
    },
    "edit": "ask",
    "write": "ask",
    "patch": "ask",
    "webfetch": "ask"
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "DUMMY VALUE -right now not (yet) required"
      },
      "enabled": true
    }
  },
  "agent": {
    "build": {
      "mode": "primary",
      "model": "openrouter/anthropic/claude-sonnet-4.5",
      // BUG?: v1.6.1 Activating this tools sections invalidates global permissions for bash from above
      // "tools": {
      //   "write": true,
      //   "edit": true,
      //   "bash": true,
      //   "webfetch": false,
      // },
      "permission": {
        "write": "ask",
        "edit": "ask"
        // bash not set, so global config must apply
        // "bash": "ask"
      }
    },
    "plan": {
      "mode": "primary",
      "model": "openrouter/openai/gpt-5.1",
      "tools": {
        "bash": false
      },
      "temperature": 0.1
    }
  }
}